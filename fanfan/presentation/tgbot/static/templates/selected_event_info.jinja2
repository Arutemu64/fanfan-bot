{% macro events_pluralize(count) %}
{% if (count % 10 == 1) and (count % 100 != 11) %}
выступление
{%- elif (2 <= count % 10 <= 4) and (count % 100 < 10 or count % 100 >= 20) %}
выступления
{%- else %}
выступлений
{%- endif %}
{% endmacro %}
<blockquote>{{selected_event.title}}</blockquote>
{% if selected_event.position and current_event %}
    {% if selected_event.position > current_event.position %}
        {% set events_left = selected_event.position - current_event.position %}
До начала осталось <b>{{ events_left }} {{events_pluralize(events_left)}}</b>
    {% endif %}
{% endif %}