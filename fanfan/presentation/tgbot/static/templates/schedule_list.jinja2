{% if events|length == 0 %}
⚠️ Выступления не найдены
{% else %}
    {% for event in events %}
        {% if event.nomination %}
            {% if loop.previtem %}
                {% if event.nomination != loop.previtem.nomination %}
<b>➡️ {{event.nomination.title}}</b>
                {% endif %}
            {% else %}
<b>➡️ {{event.nomination.title}}</b>
            {% endif %}
        {% endif %}
        {% if event.skip %}<s>{% endif %}
        {% if event.current %}<b>{% endif %}
<b>{{event.id}}.</b> {{event.title}}
        {%- if event.current %} 👈</b>{% endif %}
        {%- if event.user_subscription %} 🔔{% endif %}
        {%- if event.skip %}</s>{% endif +%}
    {% endfor %}
{% endif %}